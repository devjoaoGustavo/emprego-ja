<div class="container-fluid">
  <div class="col-sm-2">
    <ul class="nav nav-stacked">
      <li class="nav-header">
        <a data-target="#companyMenu" data-toggle="collapse" href="#">Empresas:</a>
        <ul id="companyMenu" class="nav nav-stacked collapse in">
          <% @companies.each do |company| %>
          <li><%= "Premium!!! - " if company.premium? %><%= link_to company.name, company_path(company) %></li>
          <% end %>
        </ul>
      </li>
      <hr>
      <li class="nav-header">
        <a data-target="#categoryMenu" data-toggle="collapse" href="#">Categorias:</a>
        <ul id="categoryMenu" class="nav nav-stacked collapse in">
          <% @categories.each do |category| %>
          <li><%= link_to category.name, category_path(category) %></li>
          <% end %>
        </ul>
      </li>
      <hr>

      <li class="nav-header">
        <a data-target="#contractTypeMenu" data-toggle="collapse" href="#">Tipo de contratação:</a>
        <ul id="contractTypeMenu" class="nav nav-stacked collapse in">
          <% @contract_types.each do |contract_type| %>
          <li><%= link_to contract_type.name, contract_type_path(contract_type) %></li>
          <% end %>
        </ul>
      </li>

    </ul>
  </div>
  <div class="col-sm-10">
    <% @jobs.each do |job| %>
      <div class="col-sm-5 well">
        <h4><%= job.title %></h4>
        <span class="featured"><%= "Nova Vaga!!!" if job.recent? %></span>
        <p><b>Category:</b> <%= job.category.name %><br>
        <b>Localização:</b> <%= job.location %><br>
        <b>Empresa:</b> <%= job.company.name %></p>
        <%= link_to 'Ver mais', job_path(job), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
