<h2><%= @job.title %></h2>
<span class="featured-job"><%= "Vaga em Destaque!" if @job.featured %></span>
<hr>
<span class="response"><%= notice %></span>
<div class="job-details">
  <p><b>Localização: </b><%= @job.location %></p>
  <p><b>Empresa: </b><%= @job.company %></p>
  <p><b>Descrição: </b><%= @job.description %></p>
  <p><b>Categoria: </b><%= @job.category %></p>
</div>
<%= link_to 'Voltar', root_path %>
